<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Database Configuration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Styling form groups */
        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                margin-right: 10px;
                width: 180px;
                background-color: #263a59;
                color: white;
                text-align: center;
                padding: 5px;
                border-radius: 20px 0 0 20px;
                height: 38px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .form-control {
            flex-grow: 1;
            border-radius: 0 20px 20px 0;
            height: 38px;
        }

        .form-section {
            margin-top: 20px;
            padding: 20px;
            background-color: #263a59;
            color: white;
            border-radius: 5px;
        }

        .btn-custom,
        .btn-cancel {
            min-width: 120px;
            height: 40px;
            border-radius: 5px;
            font-size: 16px;
        }

        .btn-custom {
            background-color: #001f3f;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .btn-cancel {
            background-color: #d9534f;
            color: white;
            border: none;
        }

            .btn-cancel:hover {
                background-color: #c9302c;
            }

        .button-group {
            display: flex;
            justify-content: flex-end;
            margin-top: 30px;
        }

            .button-group button {
                margin-left: 10px;
            }

        .popover-icon {
            margin-left: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Database Configuration</h2>
        <form asp-action="DatabaseConfig" method="post">
            <div class="row">
                <!-- Server Path Section -->
                <div class="col-md-6">
                    <div class="form-section">
                        <h4>Server Path Information</h4>
                        <div class="form-group">
                            <label for="serverPath">Server Path</label>
                            <input type="text" class="form-control" name="serverPath" value="@ViewBag.ServerPath" placeholder="Enter Server Path" />
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Server Path" data-bs-content="Path to the server."></i>
                        </div>

                        <div class="form-group">
                            <label for="portNumber">Port Number</label>
                            <input type="text" class="form-control" name="portNumber" value="@ViewBag.PortNumber" placeholder="Enter Port Number" />
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Port Number" data-bs-content="Server's port number."></i>
                        </div>
                    </div>
                </div>

                <!-- User Credentials Section -->
                <div class="col-md-6">
                    <div class="form-section">
                        <h4>User Credentials</h4>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" name="username" value="@ViewBag.Username" placeholder="Enter Username" />
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Username" data-bs-content="Your login username."></i>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" value="@ViewBag.Password" placeholder="Enter Password" />
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Password" data-bs-content="Your login password."></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Button Section -->
            <div class="button-group">
                <button type="submit" class="btn btn-custom">Save</button>
                <button type="button" class="btn btn-cancel" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancel</button>
            </div>
        </form>
    </div>

    <!-- Cancel Confirmation Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Confirm Cancel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to cancel? Any unsaved changes will be lost.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="window.location.href='/'">Yes, Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap and Popover JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl);
        });
    </script>
</body>
</html>
