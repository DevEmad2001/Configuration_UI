<style>
    .form-section {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .form-section h4 {
            margin-bottom: 15px;
        }

    .hidden {
        display: none;
    }

    .btn-custom {
        background-color: #001f3f;
        color: white;
        border-color: #001f3f;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .btn-cancel {
        background-color: #d9534f;
        color: white;
        border-color: #d9534f;
    }

        .btn-cancel:hover {
            background-color: #c9302c;
        }

    .button-group {
        display: flex;
        justify-content: flex-end;
        margin-top: 30px;
    }

        .button-group button {
            margin-left: 10px;
        }

</style>

<form id="gisudaForm" asp-action="GISUDAConfig" method="post">
    <!-- Service Section -->
    <div class="form-section">
        <h4>Service Information</h4>
        <div class="mb-3">
            <label for="serviceURL" class="form-label">Service URL</label>
            <input type="text" class="form-control" id="serviceURL" name="serviceURL" placeholder="Enter Service URL">
        </div>
        <div class="mb-3">
            <label for="binding" class="form-label">Binding</label>
            <input type="text" class="form-control" id="binding" name="binding" placeholder="Enter Binding">
        </div>
        <div class="mb-3">
            <label for="authentication" class="form-label">Authentication</label>
            <select class="form-select" id="authentication" name="authentication">
                <option value="" selected disabled>Choose Authentication</option>
                <option value="basic">Basic</option>
                <option value="certificate">Certificate</option>
                <option value="token">Token</option>
            </select>
        </div>
    </div>

    <!-- Basic Authentication Section -->
    <div id="basicAuthSection" class="form-section hidden">
        <h4>Basic Authentication</h4>
        <div class="mb-3">
            <label for="basicuserName" class="form-label">Basic Username</label>
            <input type="text" class="form-control" id="basicuserName" name="basicUsername" placeholder="Enter Basic Username">
        </div>
        <div class="mb-3">
            <label for="basicPassword" class="form-label">Basic Password</label>
            <input type="password" class="form-control" id="basicPassword" name="basicPassword" placeholder="Enter Basic Password">
        </div>
    </div>

    <!-- Certificate Information Section -->
    <div id="certificateAuthSection" class="form-section hidden">
        <h4>Certificate Information</h4>
        <div class="mb-3">
            <label for="certificatePath" class="form-label">Certificate Path</label>
            <input type="text" class="form-control" id="certificatePath" name="certificatePath" placeholder="Enter Certificate Path">
        </div>
        <div class="mb-3">
            <label for="certificatePassword" class="form-label">Certificate Password</label>
            <input type="password" class="form-control" id="certificatePassword" name="certificatePassword" placeholder="Enter Certificate Password">
        </div>
    </div>

    <!-- Token Information Section -->
    <div id="tokenAuthSection" class="form-section hidden">
        <h4>Token Authentication</h4>
        <div class="mb-3">
            <label for="token" class="form-label">Enter Token</label>
            <input type="text" class="form-control" id="token" name="token" placeholder="Enter Token">
        </div>
    </div>

    <!-- Protocol Section -->
    <div class="form-section">
        <h4>Other Information</h4>
        <div class="mb-3">
            <label for="protocol" class="form-label">Protocol</label>
            <input type="text" class="form-control" id="protocol" name="protocol" placeholder="Enter Protocol">
        </div>
    </div>

    <!-- Button Section -->
    <div class="button-group">
        <button type="submit" class="btn btn-custom">Save</button>
        <button type="button" class="btn btn-cancel">Cancel</button>
    </div>
</form>


<!-- JavaScript to handle form display -->
<script>
    document.getElementById('authentication').addEventListener('change', function () {
        // Hide all authentication sections
        document.getElementById('basicAuthSection').classList.add('hidden');
        document.getElementById('certificateAuthSection').classList.add('hidden');
        document.getElementById('tokenAuthSection').classList.add('hidden');

        // Show the relevant section based on the selected authentication type
        var authType = this.value;
        if (authType === 'basic') {
            document.getElementById('basicAuthSection').classList.remove('hidden');
        } else if (authType === 'certificate') {
            document.getElementById('certificateAuthSection').classList.remove('hidden');
        } else if (authType === 'token') {
            document.getElementById('tokenAuthSection').classList.remove('hidden');
        }
    });
</script>
