<style>
    .form-section {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .form-section h4 {
            margin-bottom: 15px;
        }

    .hidden {
        display: none;
    }

    .btn-custom {
        background-color: #001f3f;
        color: white;
        border-color: #001f3f;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .btn-cancel {
        background-color: #d9534f;
        color: white;
        border-color: #d9534f;
    }

        .btn-cancel:hover {
            background-color: #c9302c;
        }

    .button-group {
        display: flex;
        justify-content: flex-end;
        margin-top: 30px;
    }

        .button-group button {
            margin-left: 10px;
        }
</style>

<div class="container mt-5">
    <h2>Control Service  Configuration</h2>
    <form id="configForm">
        <!-- First Section -->
        <div class="form-section">
            <div class="mb-3">
                <label for="serviceURL" class="form-label">Service URL</label>
                <input type="text" class="form-control" id="serviceURL" placeholder="Enter Service URL">
            </div>
            <div class="mb-3">
                <label for="binding" class="form-label">Binding</label>
                <input type="text" class="form-control" id="binding" placeholder="Enter Binding">
            </div>

            <div class="mb-3">
                <label for="protocol" class="form-label">Protocol</label>
                <input type="text" class="form-control" id="protocol" placeholder="Enter Protocol">
            </div>

            <div class="mb-3">
                <label for="authentication" class="form-label">Authentication</label>
                <select class="form-select" id="authentication">
                    <option value="" selected disabled>Choose Authentication</option>
                    <option value="basic">Basic</option>
                    <option value="certificate">Certificate</option>
                    <option value="token">Token</option>
                </select>
            </div>
        </div>

        <!-- Basic Authentication Form Section -->
        <div id="basicAuthForm" class="form-section hidden">
            <h4>Basic Authentication</h4>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Enter Username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter Password">
            </div>
        </div>

        <!-- Certificate Authentication Form Section -->
        <div id="certificateAuthForm" class="form-section hidden">
            <h4>Certificate Authentication</h4>
            <div class="mb-3">
                <label for="certificate" class="form-label">Upload Certificate</label>
                <input type="file" class="form-control" id="certificate">
            </div>
        </div>

        <!-- Token Authentication Form Section -->
        <div id="tokenAuthForm" class="form-section hidden">
            <h4>Token Authentication</h4>
            <div class="mb-3">
                <label for="token" class="form-label">Enter Token</label>
                <input type="text" class="form-control" id="token" placeholder="Enter Token">
            </div>
        </div>

        <!-- Button Section -->
        <div class="button-group">
            <button type="submit" class="btn btn-custom">Save</button>
            <button type="button" class="btn btn-cancel">Cancel</button>
        </div>
    </form>
</div>

<!-- JavaScript to handle form display -->
<script>
    document.getElementById('authentication').addEventListener('change', function () {
        // Hide all sections
        document.getElementById('basicAuthForm').classList.add('hidden');
        document.getElementById('certificateAuthForm').classList.add('hidden');
        document.getElementById('tokenAuthForm').classList.add('hidden');

        // Show the relevant section based on selection
        var authType = this.value;
        if (authType === 'basic') {
            document.getElementById('basicAuthForm').classList.remove('hidden');
        } else if (authType === 'certificate') {
            document.getElementById('certificateAuthForm').classList.remove('hidden');
        } else if (authType === 'token') {
            document.getElementById('tokenAuthForm').classList.remove('hidden');
        }
    });
</script>
