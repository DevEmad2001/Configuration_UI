<style>
    .form-section {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .form-section h4 {
            margin-bottom: 15px;
        }

    .btn-custom {
        background-color: #001f3f;
        color: white;
        border-color: #001f3f;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .btn-cancel {
        background-color: #d9534f;
        color: white;
        border-color: #d9534f;
    }

        .btn-cancel:hover {
            background-color: #c9302c;
        }

    .button-group {
        display: flex;
        justify-content: flex-end;
        margin-top: 30px;
    }

        .button-group button {
            margin-left: 10px;
        }
</style>



<div class="container mt-5">
    <h2>SFTP Connector Configuration</h2>
    <form id="sftpConnectorForm">
        <!-- Server Info Section -->
        <div class="form-section">
            <h4>Server Information</h4>
            <div class="mb-3">
                <label for="server" class="form-label">Server</label>
                <input type="text" class="form-control" id="server" placeholder="Enter Server Address">
            </div>
            <div class="mb-3">
                <label for="portNumber" class="form-label">Port Number</label>
                <input type="text" class="form-control" id="portNumber" placeholder="Enter Port Number">
            </div>
        </div>

        <!-- User Credentials Section -->
        <div class="form-section mt-4">
            <h4>User Credentials</h4>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Enter Username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter Password">
            </div>
        </div>

        <!-- File Paths Section -->
        <div class="form-section mt-4">
            <h4>File Paths</h4>
            <div class="mb-3">
                <label for="filePaths" class="form-label">File Paths</label>
                <textarea class="form-control" id="filePaths" rows="3" placeholder="Enter File Paths"></textarea>
            </div>
        </div>

        <!-- Button Section -->
        <div class="button-group">
            <button type="submit" class="btn btn-custom">Save</button>
            <button type="button" class="btn btn-cancel">Cancel</button>
        </div>
    </form>
</div>

