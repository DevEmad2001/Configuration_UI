<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Configuration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-section {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            .form-section h4 {
                margin-bottom: 15px;
            }

        .btn-custom {
            background-color: #001f3f;
            color: white;
            border-color: #001f3f;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .btn-cancel {
            background-color: #d9534f;
            color: white;
            border-color: #d9534f;
        }

            .btn-cancel:hover {
                background-color: #c9302c;
            }

        .button-group {
            display: flex;
            justify-content: flex-end;
            margin-top: 30px;
        }

            .button-group button {
                margin-left: 10px;
            }

        
    </style>
</head>
<body>
    <div class="container mt-5" style=" margin: 55px 55px 0px 0px;">
        <h2>Database Configuration</h2>
        <form>
            <!-- Server Path Section -->
            <div class="form-section">
                <h4>Server Path Information</h4>
                <div class="mb-3">
                    <label for="serverPath" class="form-label">Server Path</label>
                    <input type="text" class="form-control" id="serverPath" placeholder="Enter Server Path" />
                </div>

                <div class="mb-3">
                    <label for="portNumber" class="form-label">Port Number</label>
                    <input type="text" class="form-control" id="portNumber" placeholder="Enter Port Number" />
                </div>
            </div>

            <!-- User Credentials Section -->
            <div class="form-section mt-4">
                <h4>User Credentials</h4>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter Username" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter Password" />
                </div>
            </div>

            <!-- Button Section -->
            <div class="button-group">
                <button type="submit" class="btn btn-custom">Save</button>
                <button type="button" class="btn btn-cancel">Cancel</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
