<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Configuration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Existing CSS */
        .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                margin-right: 10px;
                margin-top: 7px;
                width: auto;
                padding: 5px;
                border: 2px solid white;
                border-top-left-radius: 20px;
                border-bottom-left-radius: 20px;
                border-top-right-radius: 0px;
                border-bottom-right-radius: 0px;
                background-color: #263a59;
                color: white;
                min-width: 180px; /* تعديل العرض إلى 180px */
                text-align: center;
                height: 38px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .form-control {
            flex-grow: 1;
            border-top-left-radius: 0px;
            border-bottom-left-radius: 0px;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            height: 38px;
        }

        .form-section {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            background-color: #263a59;
            color: white;
            border-radius: 5px;
        }

        .btn-custom {
            background-color: #001f3f;
            color: white;
            border-color: #001f3f;
            min-width: 120px;
            height: 38px;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .btn-cancel {
            background-color: #d9534f;
            color: white;
            border-color: #d9534f;
            min-width: 120px;
            height: 38px;
            margin-left: 10px; /* مسافة بين الأزرار */
        }

            .btn-cancel:hover {
                background-color: #c9302c;
            }

        .button-group {
            display: flex;
            justify-content: flex-end;
            margin-top: 30px;
        }

        .popover-icon {
            margin-left: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container mt-5" style="margin: 30px 30px 35px 115px;">
        <h2>SFTP Connector </h2>
        <form>
            <div class="row">
                <!-- Server Path Section -->
                <div class="col-md-6">
                    <div class="form-section">
                        <h4>Server Path Information</h4>
                        <div class="form-group">
                            <label for="serverPath" class="form-label">Server Path</label>
                            <input type="text" class="form-control" id="serverPath" placeholder="Enter Server Path" />
                            <!-- Icon for Popover -->
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Server Path" data-bs-content="This is the path to the server."></i>
                        </div>

                        <div class="form-group">
                            <label for="portNumber" class="form-label">Port Number</label>
                            <input type="text" class="form-control" id="portNumber" placeholder="Enter Port Number" />
                            <!-- Icon for Popover -->
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Port Number" data-bs-content="This is the server's port number."></i>
                        </div>
                    </div>
                </div>

                <!-- User Credentials Section -->
                <div class="col-md-6">
                    <div class="form-section">
                        <h4>User Credentials</h4>
                        <div class="form-group">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" placeholder="Enter Username" />
                            <!-- Icon for Popover -->
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Username" data-bs-content="This is your login username."></i>
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Enter Password" />
                            <!-- Icon for Popover -->
                            <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="Password" data-bs-content="This is your login password."></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- File Path Section -->
            <div class="form-section">
                <h4>File Path</h4>
                <div class="form-group">
                    <label for="filePath" class="form-label">File Path</label>
                    <input type="text" class="form-control" id="filePath" placeholder="Enter File Path" />
                    <!-- Icon for Popover -->
                    <i class="fas fa-info-circle popover-icon" tabindex="0" data-bs-toggle="popover" data-bs-trigger="focus" title="File Path" data-bs-content="This is the path to the file you want to upload."></i>
                </div>
            </div>

            <!-- Button Section -->
            <div class="button-group">
                <button type="submit" class="btn btn-custom">Save</button>
                <button type="button" class="btn btn-cancel" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancel</button>
            </div>
        </form>
    </div>

    <!-- Cancel Confirmation Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Confirm Cancel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to cancel? Any unsaved changes will be lost.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="window.location.href='/'">Yes, Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap and Popover JS -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Initialize all popovers
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl)
        })
    </script>
</body>
</html>
